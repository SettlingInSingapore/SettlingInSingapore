<HorizontalScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:overScrollMode="always"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            style="@style/CategoryStyle.Red"
            android:id="@+id/categoryOne"
            android:onClick="CategoryOnClick">

            <TextView
                style="@style/HeaderTextStyle.Red"
                android:text="@string/category1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="WordArt of 'Abit The Singlish' goes here."/>

        </LinearLayout>

        <LinearLayout
            style="@style/CategoryStyle.Red"
            android:id="@+id/categoryTwo"
            android:onClick="CategoryOnClick">

            <TextView
                style="@style/HeaderTextStyle.Red"
                android:text="@string/category2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Similarly, wordart goes here. Links to food category."/>

        </LinearLayout>

        <LinearLayout
            style="@style/CategoryStyle.Red"
            android:id="@+id/categoryThree"
            android:onClick="CategoryOnClick">

            <TextView
                style="@style/HeaderTextStyle.Red"
                android:text="@string/category3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Similarly, wordart goes here. Links to fruits, drinks and desserts category."/>

        </LinearLayout>

        <LinearLayout
            style="@style/CategoryStyle.Red"
            android:id="@+id/categoryFour"
            android:onClick="CategoryOnClick">

            <TextView
                style="@style/HeaderTextStyle.Red"
                android:text="@string/category4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Similarly, wordart goes here. Links to harder/less commonly used singlish category."/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            style="@style/CategoryStyle.White"
            android:id="@+id/categoryFive"
            android:onClick="CategoryOnClick">

            <TextView
                style="@style/HeaderTextStyle.White"
                android:text="@string/category5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="One or two day guide in Singapore."/>


        </LinearLayout>

        <LinearLayout
            style="@style/CategoryStyle.White"
            android:id="@+id/categorySix"
            android:onClick="CategoryOnClick">

            <TextView
                style="@style/HeaderTextStyle.White"
                android:text="@string/category6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Singaporean landmarks."/>


        </LinearLayout>

        <LinearLayout
            style="@style/CategoryStyle.White"
            android:id="@+id/categorySeven"
            android:onClick="CategoryOnClick">

            <TextView
                style="@style/HeaderTextStyle.White"
                android:text="@string/category7"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transport"/>


        </LinearLayout>

        <LinearLayout
            style="@style/CategoryStyle.White"
            android:id="@+id/categoryEight"
            android:onClick="CategoryOnClick">

            <TextView
                style="@style/HeaderTextStyle.White"
                android:text="@string/category8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Night Activities/Places"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
</HorizontalScrollView><!-- From: file:/C:/Users/Jiasheng/Documents/GitHub/SettlingInSingapore/app/src/main/res/layout/activity_main.xml -->